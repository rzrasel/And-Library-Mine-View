<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <Spinner
            android:id="@+id/sysSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff0000" />

        <com.rz.usagesexample.NoDefaultSpinner
            android:id="@+id/sysSpinnerTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sysSpinner"
            android:layout_marginTop="36dp" />

        <com.rz.usagesexample.SearchableSpinnerOne
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sysSpinnerTwo" />

        <TextView
            android:id="@+id/first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner1"
            android:layout_gravity="center_horizontal"
            android:text="Nothing selected..." />
    </RelativeLayout>

</RelativeLayout>
