<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!--make a gradient background-->
            <gradient android:angle="90" android:centerColor="#ffffff" android:endColor="#BDB76B" android:gradientRadius="90" android:startColor="#556B2F" android:type="linear" />
            <!--apply a border around button-->
            <stroke android:width="1dp" android:color="#006400" />
            <!-- make the button corners rounded-->
            <corners android:radius="6dp" />
        </shape>
    </item>
</selector><!--
