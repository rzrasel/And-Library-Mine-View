<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!--make a gradient background-->
            <!--<gradient android:angle="90" android:centerColor="#f9f9f9" android:endColor="#ffffff" android:gradientRadius="90" android:startColor="#f2f2f2" android:type="linear" />-->
            <solid android:color="#414449" />
            <!--apply a border around button-->
            <stroke android:width="1dp" android:color="#414449" />
            <!-- make the button corners rounded--> <!--text color:- #7b7b7b-->
            <corners android:bottomLeftRadius="0dp" android:radius="100dp" android:topLeftRadius="0dp" />
        </shape>
    </item>
</selector>